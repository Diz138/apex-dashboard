---
import PlayerCard from '../components/PlayerCard.astro';
import Layout from '../layouts/Layout.astro';
import { loadPlayers } from '../lib/profiles';

const players = loadPlayers();
const championSquad = players.slice(0, 3);
const otherPlayers = players.slice(3);
---

<Layout>
  <div class="dashboard">
    <h1 class="page-title">Apex Legends Stats</h1>
    
    {championSquad.length > 0 && (
      <section class="champion-squad-section">
        <div class="champion-header">
          <svg class="champion-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
          <h2>CHAMPION SQUAD</h2>
        </div>
        <div class="champion-grid">
          {championSquad.map((player, index) => (
            <PlayerCard
              {...player}
              isChampion={index === 1}
            />
          ))}
        </div>
        <div class="xp-bonus">500 XP CHAMPION SQUAD BONUS</div>
      </section>
    )}
    
    {otherPlayers.length > 0 && (
      <section class="other-players-section">
        <h2>All Players</h2>
        <div class="players-grid">
          {otherPlayers.map((player) => (
            <PlayerCard {...player} />
          ))}
        </div>
      </section>
    )}
  </div>
</Layout>

<style>
  .dashboard {
    min-height: 100vh;
    background:
      radial-gradient(circle at 30% 40%, rgba(80, 80, 90, 0.15) 0%, transparent 30%),
      radial-gradient(circle at 70% 60%, rgba(70, 70, 80, 0.12) 0%, transparent 35%),
      radial-gradient(ellipse at 20% 50%, rgba(50, 50, 60, 0.25) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 30%, rgba(40, 40, 50, 0.2) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 80%, rgba(35, 35, 45, 0.2) 0%, transparent 50%),
      linear-gradient(180deg, #18181c 0%, #25252a 50%, #18181c 100%);
    padding: 40px 20px;
    color: #ffffff;
  }

  .page-title {
    text-align: center;
    font-size: 48px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-family: 'Impact', 'Arial Black', sans-serif;
    margin-bottom: 40px;
    background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .champion-squad-section,
  .other-players-section {
    max-width: 1400px;
    margin-inline: auto;
  }

  .champion-squad-section {
    margin-bottom: 60px;
  }

  .champion-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-bottom: 32px;
    padding: 20px;
    background: rgba(10, 10, 15, 0.6);
    border-block: 1px solid rgba(212, 175, 55, 0.3);
    backdrop-filter: blur(4px);
  }

  .champion-icon {
    width: 32px;
    height: 32px;
    color: #d4af37;
  }

  .champion-header h2 {
    font-size: 32px;
    font-weight: 900;
    letter-spacing: 3px;
    font-family: 'Impact', 'Arial Black', sans-serif;
    color: #d4af37;
    margin: 0;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7);
  }

  .champion-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }

  .xp-bonus {
    text-align: center;
    font-size: 15px;
    font-weight: 900;
    letter-spacing: 2px;
    font-family: 'Impact', 'Arial Black', sans-serif;
    color: #d4af37;
    padding: 14px;
    margin-top: 20px;
    background: rgba(10, 10, 15, 0.6);
    border-top: 1px solid rgba(212, 175, 55, 0.3);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
  }

  .other-players-section h2 {
    font-size: 24px;
    font-weight: 900;
    letter-spacing: 2px;
    font-family: 'Impact', 'Arial Black', sans-serif;
    margin-bottom: 24px;
    text-transform: uppercase;
    color: #cccccc;
  }

  .players-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 16px;
  }

  @media (max-width: 1200px) {
    .champion-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 32px;
    }

    .champion-header h2 {
      font-size: 24px;
    }

    .players-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
